<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:background="@drawable/app_bar_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:paddingLeft="10dp"
            android:background="@drawable/app_bar_color"
            android:layout_gravity="center"
            android:id="@+id/title_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center|left"
                app:srcCompat="@drawable/arrowleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:visibility="gone"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:textColor="@color/tool_bar_text_color"
                android:id="@+id/title"
                android:textSize="@dimen/small_text"
                android:paddingLeft="@dimen/size_8dp"
                android:text="dfdfdfdfd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="8dp"
                    android:src="@drawable/kyarlaybanner"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_marginTop="@dimen/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearDay"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                layout="@layout/layout_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:padding="@dimen/size_8dp"
                android:layout_marginTop="@dimen/layout_margin_reading_post"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="@dimen/size_8dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/engAllInfo"
                        android:textSize="@dimen/small_text"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/engInfo"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/myanDayInfo"
                        android:gravity="right"
                        android:textSize="@dimen/small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/myanYearInfo"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:textSize="@dimen/small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/myanInfo"
                        android:gravity="right"
                        android:textSize="@dimen/small_text"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/size_8dp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/layout_margin_reading_post"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/txtHoldiay"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:paddingTop="@dimen/layout_margin_reading_post"
                    android:textSize="@dimen/small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/myanNagarInfo"
                    android:paddingTop="@dimen/layout_margin_reading_post"
                    android:textSize="@dimen/small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/myanYatyarInfo"
                    android:paddingTop="@dimen/layout_margin_reading_post"
                    android:textSize="@dimen/small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/todayInfo"
                    android:paddingTop="@dimen/layout_margin_reading_post"
                    android:textSize="@dimen/small_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFortune"
            android:padding="@dimen/size_8dp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/layout_margin_reading_post"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/txtFortuneTeller"
                android:textSize="@dimen/small_text"
                android:paddingTop="@dimen/layout_margin_reading_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <RatingBar
                android:outlineAmbientShadowColor="@color/colorSplashScreen"
                android:paddingTop="@dimen/layout_margin_reading_post"
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:numStars="3"
                android:progressTint="@color/colorSplashScreen"
                style="@style/Widget.AppCompat.RatingBar.Small"/>

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/desc"
                android:paddingTop="@dimen/layout_margin_reading_post"
                android:textSize="@dimen/small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/work_group"
                android:paddingTop="@dimen/layout_margin_reading_post"
                android:textSize="@dimen/small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
