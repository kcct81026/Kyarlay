<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:cardElevation="@dimen/cardElevation"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                layout="@layout/main_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:visibility="gone"
                android:id="@+id/txtDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/transparent_corner"
                android:layout_alignParentTop="true"
                android:padding="12dip"
                android:textSize="@dimen/small_text"
                android:text="SomeText"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/linearImage"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_8dp"
                android:paddingRight="@dimen/size_8dp"
                android:background="@drawable/checked_bg_grey_solid"
                android:layout_margin="@dimen/layout_margin_reading_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:layout_marginLeft="@dimen/size_8dp"
                    app:srcCompat="@drawable/gallery_white"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/txtImgCount"
                    android:textColor="@color/white"
                    android:text="5"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:textSize="@dimen/title"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_detail_footer_edittext">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/txtAllMark"
                    android:paddingLeft="@dimen/layout_padding"
                    android:paddingRight="@dimen/layout_padding"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/text"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/product_detail_footer_button" />

                <TextView
                    android:background="@color/background"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgShare"
                    app:srcCompat="@drawable/ic_share_black_24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circular_border_background"
                    android:padding="4dp"
                    android:layout_width="@dimen/diment_30"
                    android:layout_height="@dimen/diment_30" />

                <TextView
                    android:background="@color/background"
                    android:layout_width="20dp"
                    android:layout_height="1dp" />

                <ImageView
                    android:id="@+id/imgWishList"
                    app:srcCompat="@drawable/ic_wishlist_black"
                    android:layout_gravity="center"
                    android:background="@drawable/circular_border_background"
                    android:padding="4dp"
                    android:layout_width="@dimen/diment_30"
                    android:layout_height="@dimen/diment_30" />

                <TextView
                    android:background="@color/background"
                    android:layout_width="20dp"
                    android:layout_height="1dp" />

                <ImageView
                    android:id="@+id/imgChat"
                    app:srcCompat="@drawable/ic_chat_bubble_outline_black_24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circular_border_background"
                    android:padding="4dp"
                    android:layout_width="@dimen/diment_30"
                    android:layout_height="@dimen/diment_30" />
                <TextView
                    android:background="@color/background"
                    android:layout_width="20dp"
                    android:layout_height="1dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/layout_margin_reading_post"
                android:layout_marginRight="@dimen/layout_margin_reading_post"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/title"
                    android:text="Baobaoho C3 Trolley"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:layout_marginTop="@dimen/size_8dp"
                    android:layout_marginBottom="@dimen/layout_margin_reading_post"
                    android:id="@+id/txtCategory"
                    android:text="Baobaoho C3 Trolley"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/layout_margin_reading_post"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/price"
                    android:text="88000 Ks"
                    android:textColor="@color/text"
                    android:textSize="@dimen/title_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:layout_marginTop="@dimen/size_8dp"
                    android:layout_marginBottom="@dimen/layout_margin_reading_post"
                    android:id="@+id/price_strike"
                    android:textSize="@dimen/title_text_size"
                    android:text="88000 Ks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:layout_marginLeft="@dimen/layout_margin_reading_post"
            android:layout_marginRight="@dimen/layout_margin_reading_post"
            android:layout_marginTop="@dimen/layout_margin_reading_post"
            android:layout_marginBottom="@dimen/layout_margin_reading_post"
            android:id="@+id/txtPreOrderMark"
            android:textColor="@color/coloredInactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_first_time"
            android:layout_margin="@dimen/layout_margin_reading_post"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar"
            android:background="@drawable/first_time_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/layout_margin_reading_post"
            android:paddingRight="@dimen/layout_margin_reading_post"

            >

            <ImageView
                android:layout_marginTop="@dimen/layout_margin_reading_post"
                android:layout_marginBottom="@dimen/layout_margin_reading_post"
                android:layout_gravity="center"
                android:layout_width="@dimen/product_detail_footer_edittext"
                android:layout_height="match_parent"
                android:src="@drawable/first_time_icon"
                android:scaleType="fitXY"
                />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/txtFirstTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivery_date"
                android:textStyle="bold"
                android:textSize="@dimen/s_small_text_10sp"
                android:textColor="@color/text"
                android:layout_marginRight="@dimen/padding_4dp"
                android:layout_marginLeft="@dimen/padding_4dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearProductWarning"
            android:layout_marginBottom="@dimen/layout_margin_reading_post"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/img_car"
                android:layout_marginLeft="@dimen/layout_margin_reading_post"
                android:layout_gravity="center"
                android:src="@drawable/car_one"
                android:layout_width="@dimen/diment_40"
                android:layout_height="@dimen/diment_30"
                />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:text="kdkdkk"
                android:layout_width="wrap_content"
                android:textColor="@color/coloredInactive"
                android:paddingRight="@dimen/layout_margin_reading_post"
                android:layout_marginLeft="@dimen/layout_padding"
                android:gravity="bottom"
                android:id="@+id/txtProductWarning"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFlashSale"
            android:layout_marginBottom="@dimen/layout_margin_reading_post"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="@dimen/layout_margin_reading_post"
                android:layout_marginBottom="@dimen/cardElevation"
                android:textColor="@color/coloredInactive"
                android:text="Flash Sale"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_marginLeft="@dimen/layout_margin_reading_post"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtDay"
                            android:background="@drawable/checked_square"
                            android:padding="@dimen/size_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txtDayONe"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/checked_square"
                            android:padding="@dimen/size_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_Day"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="DAY"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/layout_margin_reading_post"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtHour"
                            android:background="@drawable/checked_square"
                            android:padding="@dimen/size_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txtHourONe"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/checked_square"
                            android:padding="@dimen/size_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_Hour"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="HRS"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/layout_margin_reading_post"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtMinute"
                            android:background="@drawable/checked_square"
                            android:padding="@dimen/size_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txtMinuteONe"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/checked_square"
                            android:padding="@dimen/size_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_Minute"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="MINS"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_marginLeft="@dimen/layout_margin_reading_post"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtSecond"
                            android:background="@drawable/checked_square"
                            android:padding="@dimen/size_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txtSecondONe"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/checked_square"
                            android:padding="@dimen/size_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_Second"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="SECS"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="top"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="@dimen/size_8dp"
                        android:layout_gravity="right"
                        android:gravity="top"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <com.kyarlay.ayesunaing.custom_widget.CircularTextView
                                android:layout_centerInParent="true"
                                android:background="@color/coloredInactive"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="@dimen/layout_margin_reading_post"
                                android:layout_width="@dimen/size_8dp"
                                android:layout_height="@dimen/size_8dp" />


                        </RelativeLayout>

                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:paddingTop="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/small_text"
                            android:id="@+id/txtAvailable" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:textColor="@color/black"
            android:padding="@dimen/layout_margin_reading_post"
            android:text="kdkkdkfd"
            android:background="@color/background"
            android:id="@+id/promotion_title"
            android:textSize="@dimen/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:background="@color/background"
            android:id="@+id/discount_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/product_detail_youtube_imageview_framelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:visibility="gone">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/product_detail_youtube_imageview"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>