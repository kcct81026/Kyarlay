<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorSplashLight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/gridItemImageView_Cart"
        android:gravity="center"
        android:layout_margin="@dimen/size_8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="@dimen/layout_margin_reading_post"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/member_discount"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="@color/custom_purple"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="8dip"
                android:textSize="@dimen/small_text"
                android:textColor="@color/white" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/member_discount_flash_sale"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="@color/custom_purple"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="8dip"
                android:textSize="@dimen/small_text"
                android:textColor="@color/white" />

        <!--    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/discounts"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="@color/custom_purple"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="8dip"
                android:textSize="@dimen/small_text"
                android:textColor="@color/white" />-->

            <LinearLayout
                android:layout_centerInParent="true"
                android:id="@+id/all"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_alignParentTop="true"
                        android:id="@+id/gridItemImageView"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!--<com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/txtAllMark"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:background="#AA000000"
                        android:layout_alignParentTop="true"
                        android:padding="12dip"
                        android:text="SomeText"
                        android:textColor="@color/white" />-->

                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/discounts"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/custom_purple"
                        android:layout_alignParentTop="true"
                        android:padding="4dp"
                        android:textSize="@dimen/small_text"
                        android:text="SomeText"
                        android:textColor="@color/white" />

                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/txtAllMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/checked_bg"
                        android:layout_alignParentTop="true"
                        android:padding="8dip"
                        android:textSize="@dimen/small_text"
                        android:text="SomeText"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imgGetPoint"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="@dimen/size_8dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/get_point"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="SomeText"
                        android:textColor="@color/white" />


                </RelativeLayout>

                <LinearLayout

                    android:id="@+id/text_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:paddingTop="@dimen/size_8dp"
                            android:layout_marginRight="@dimen/layout_margin_reading_post"
                            android:paddingRight="@dimen/size_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_gravity="left"
                            android:textSize="@dimen/small_text"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:id="@+id/gridItemTitleView" />






                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:paddingTop="2dp"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_gravity="center|left"
                            android:gravity="left|center"
                            android:textSize="@dimen/small_text"
                            android:id="@+id/category_name" />

                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:paddingTop="2dp"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_gravity="center|left"
                            android:gravity="left|center"
                            android:textSize="@dimen/small_text"
                            android:id="@+id/option" />

                        <LinearLayout
                            android:layout_gravity="top"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                           <!-- <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                android:paddingTop="2dp"
                                android:layout_marginTop="2dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:background="@drawable/text_border"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:textSize="@dimen/s_small_text"
                                android:id="@+id/member_discount"
                                android:layout_marginRight="5dp"/>-->

                          <!--  <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:background="@drawable/text_border"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:textSize="@dimen/s_small_text"
                                android:id="@+id/member_discount_flash_sale" />
-->

                            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                android:paddingTop="2dp"
                                android:visibility="gone"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:background="@drawable/recommended"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/s_small_text"
                                android:id="@+id/recommended" />

                        </LinearLayout>

                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:visibility="gone"
                            android:paddingTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:textColor="@color/coloredInactive"
                            android:layout_gravity="center|left"
                            android:gravity="left|center"
                            android:textSize="@dimen/s_small_text_10sp"
                            android:id="@+id/txtAllChannel" />


                      <!--  <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </LinearLayout>
-->
                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:paddingTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="@dimen/title_small"
                            android:id="@+id/gridItemPriceView" />


                     <!--   <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:visibility="gone"
                            android:layout_marginTop="4dp"
                            android:padding="4dp"
                            android:textColor="@color/white"
                            android:background="@color/custom_purple"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/s_small_text"
                            android:id="@+id/discounts" />-->





                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:paddingTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_gravity="center|left"
                            android:gravity="left|center"
                            android:textSize="@dimen/small_text"
                            android:id="@+id/price_strike" />




                    </LinearLayout>







                    <!-- <LinearLayout
                         android:layout_marginTop="@dimen/layout_padding"
                         android:gravity="center|right"
                         android:layout_margin="8dp"
                         android:layout_gravity="bottom"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <View
                             android:id="@+id/test"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>


                     </LinearLayout>-->


                    <RelativeLayout
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:paddingTop="2dp"
                            android:paddingLeft="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/coloredInactive"
                            android:textSize="@dimen/s_small_text_10sp"
                            android:text=""
                            android:id="@+id/product_warning" />

                        <ImageView
                            android:id="@+id/imgCar"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/product_warning"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/car_one" />


                        <LinearLayout
                            android:id="@+id/addtocart"
                            android:background="@drawable/checked_bg_yellow"
                            android:layout_below="@id/product_warning"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:id="@+id/imgCart"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/add_to_cart"
                                android:layout_width="15dp"
                                android:layout_height="15dp" />

                            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                android:id="@+id/addtocart_text"
                                android:paddingRight="4dp"
                                android:paddingLeft="4dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:text="Buy"
                                android:textSize="@dimen/s_small_text_10sp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/soldOutCart"
                            android:background="@drawable/grey_solid_button"
                            android:layout_below="@id/product_warning"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                android:id="@+id/soldoutcart_text"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingRight="@dimen/layout_margin_reading_post"
                                android:paddingLeft="@dimen/layout_margin_reading_post"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:text="Buy"
                                android:textSize="@dimen/small_text"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </RelativeLayout>
                    







                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>




    </androidx.cardview.widget.CardView>



</LinearLayout>
