<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/gridItemImageView_Cart"
    android:gravity="center"
    app:cardElevation="@dimen/cardElevation"

    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:id="@+id/bg_hide"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_margin_reading_post"
            />

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="@dimen/layout_margin_reading_post"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@color/white"
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:visibility="gone"
                        android:id="@+id/tveventStart"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="@dimen/small_text"
                        android:paddingTop="@dimen/size_8dp"
                        android:layout_gravity="top"
                        android:singleLine="true"
                        android:text="Flash Sale"
                        android:textStyle="bold" />

                    <ImageView
                        android:paddingRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center|top"
                        app:srcCompat="@drawable/ic_timer_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txtDay"
                            android:background="@drawable/checked_square"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="00"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_Day"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="D"
                            android:textSize="@dimen/s_small_text"
                            android:textColor="@color/text"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="2dp"
                        android:id="@+id/linearLayout2"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txtHour"
                            android:background="@drawable/checked_square"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="00"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_Hour"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="H"
                            android:textSize="@dimen/s_small_text"
                            android:textColor="@color/text"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txtMinute"
                            android:background="@drawable/checked_square"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="00"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_Minute"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="M"
                            android:textSize="@dimen/s_small_text"
                            android:textColor="@color/text"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical" >

                        <TextView

                            android:id="@+id/txtSecond"
                            android:background="@drawable/checked_square"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="00"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_Second"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="S"
                            android:textSize="@dimen/s_small_text"
                            android:textColor="@color/text"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    />



                <LinearLayout
                    android:layout_marginRight="4dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <include
                        android:layout_marginRight="2dp"
                        android:layout_gravity="center|top"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="3dp"
                        android:id="@+id/toolbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_progress_bar" />

                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:paddingTop="3dp"
                        android:text="ddd"
                        android:layout_marginRight="3dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/small_text"
                        android:id="@+id/txtAvailable" />


                </LinearLayout>



            </LinearLayout>




            <LinearLayout
                android:id="@+id/all"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_margin="@dimen/size_8dp"
                        android:id="@+id/gridItemImageView"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/txtAllMark"
                        android:layout_marginLeft="@dimen/size_8dp"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:gravity="center|left"
                        android:background="@drawable/tag"
                        android:text="-10%"
                        android:textSize="@dimen/small_text"
                        android:textColor="@color/black" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imgGetPoint"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="@dimen/size_8dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/get_point"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentRight="true"
                        android:text="SomeText"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/text_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <!-- <com.kyarlay.ayesunaing.custom_widget.EasyCountDownTextview
                         android:id="@+id/easycountdown"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"></com.kyarlay.ayesunaing.custom_widget.EasyCountDownTextview>
         -->


                    <LinearLayout
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:paddingTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:textSize="@dimen/text"
                            android:textColor="@color/black"
                            android:id="@+id/gridItemTitleView" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                android:paddingTop="3dp"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textColor="@color/coloredInactive"
                                android:layout_gravity="center|left"
                                android:gravity="left|center"
                                android:textSize="@dimen/text"
                                android:id="@+id/gridItemPriceView" />

                            <!--   <include
                                   android:layout_marginRight="2dp"
                                   android:layout_gravity="center|right"
                                   android:layout_marginBottom="2dp"
                                   android:layout_marginTop="3dp"
                                   android:id="@+id/toolbar"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   layout="@layout/layout_progress_bar" />-->


                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                android:paddingTop="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:gravity="left|center"
                                android:textSize="@dimen/text"
                                android:id="@+id/price_strike" />

                            <!--    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                    android:paddingTop="3dp"
                                    android:text="ddd"
                                    android:layout_marginRight="3dp"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:textSize="@dimen/small_text"
                                    android:id="@+id/txtAvailable" />-->


                        </LinearLayout>



                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:paddingTop="2dp"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_gravity="center|left"
                            android:gravity="left|center"
                            android:textSize="@dimen/small_text"
                            android:id="@+id/category_name" />

                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:paddingTop="2dp"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_gravity="center|left"
                            android:gravity="left|center"
                            android:textSize="@dimen/small_text"
                            android:id="@+id/option" />

                        <LinearLayout
                            android:layout_gravity="top"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                android:paddingTop="2dp"
                                android:layout_marginTop="2dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:background="@drawable/text_border"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:textSize="@dimen/small_text"
                                android:id="@+id/member_discount"
                                android:layout_marginRight="5dp"/>

                            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                android:paddingTop="2dp"
                                android:visibility="gone"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:background="@drawable/text_border"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/small_text"
                                android:id="@+id/discounts" />

                            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                android:paddingTop="2dp"
                                android:visibility="gone"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:background="@drawable/recommended"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/small_text"
                                android:id="@+id/recommended" />

                        </LinearLayout>

                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:visibility="gone"
                            android:paddingTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:textColor="@color/coloredInactive"
                            android:layout_gravity="center|left"
                            android:gravity="left|center"
                            android:textSize="@dimen/s_small_text_10sp"
                            android:id="@+id/txtAllChannel" />



                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>





</androidx.cardview.widget.CardView>