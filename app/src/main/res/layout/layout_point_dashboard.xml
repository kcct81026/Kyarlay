<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical"
    android:background="@color/background"
    android:id="@+id/linearMain"
    android:layout_marginTop="@dimen/layout_margin_reading_post"
    >

    <LinearLayout
        android:id="@+id/linearBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_8dp"
        android:layout_margin="@dimen/layout_margin_reading_post">

        <LinearLayout
            android:id="@+id/layoutOne"
            android:layout_margin="@dimen/size_8dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtMemberTitle"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kyarlay VIP Member"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/text"
                android:textStyle="bold" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imgHiddenOne"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_gravity="center"
                android:layout_width="@dimen/diment_40"
                android:layout_height="@dimen/diment_40"
                android:src="@drawable/vip_icon"/>

            <LinearLayout
                android:id="@+id/layoutPoint"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/layout_margin_reading_post"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_yellow_light">
                <ImageView
                    android:layout_marginLeft="@dimen/size_8dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/user_point"/>
                <TextView
                    android:id="@+id/txtPoint"
                    android:layout_margin="@dimen/padding_4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="190000"
                    android:textSize="@dimen/small_text_14"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/padding_4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDeadline"
                android:paddingLeft="@dimen/layout_margin_reading_post"
                android:paddingRight="@dimen/layout_margin_reading_post"
                android:paddingTop="@dimen/padding_4dp"
                android:paddingBottom="@dimen/padding_4dp"
                android:background="@drawable/border_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_8dp"
                android:text="Kyarlay Member"
                android:textSize="@dimen/smallText"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kyarlay Member"
                android:textSize="@dimen/small_text_14"
                android:textColor="@color/text"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginRight="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/layout_margin_reading_post"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/progress"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:max="100"
                android:progress="45"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/imgHiddenTwo"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_width="@dimen/diment_30"
                android:layout_height="@dimen/diment_30"
                android:src="@drawable/vip_icon"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/txtWatchMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/custom_purple_deep"
                android:text="To watch >"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/size_8dp"
                android:textSize="@dimen/small_text_14"
                android:layout_marginRight="@dimen/size_8dp"
                android:textStyle="bold"
                />



        </LinearLayout>

        <TextView
            android:id="@+id/txtBottom"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginBottom="@dimen/size_8dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kyarlay Member"
            android:textSize="@dimen/small_text_14"
            android:textColor="@color/text"
             />

    </LinearLayout>

</LinearLayout>