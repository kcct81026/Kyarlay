<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_8dp"
    android:paddingBottom="@dimen/layout_margin_reading_post"
    android:layout_marginTop="@dimen/layout_margin_reading_post"
    android:id="@+id/linearArrivalMain"
    >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/right_side_yellow_solid"
            android:layout_width="4dp"
            android:layout_height="@dimen/diment_40" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgFlash"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/size_8dp"
            android:src="@drawable/flash_sale_banner"
            android:layout_width="@dimen/mall_tool_bar"
            android:layout_height="@dimen/diment_40" />

        <TextView
            android:id="@+id/txtNewArrival"
            android:layout_marginLeft="@dimen/size_8dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:text="New Arrival"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/linearSeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSeeMore"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_gravity="center"
                android:text="See More"
                android:textSize="@dimen/small_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/layout_margin_reading_post"
                android:background="@drawable/bg_yellow_4dp_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    app:srcCompat="@drawable/ic_arrow_right"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/diment_30"
                    android:layout_height="@dimen/diment_30" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/layout_margin_reading_post"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants" />

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/layoutContinue"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/diment_30"
            android:layout_height="@dimen/diment_30"
            android:tint="@color/colorSplashScreen"
            app:srcCompat="@drawable/down_arrow_black" />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtContinue"
            android:text="Continue"
            android:textColor="@color/colorSplashScreen"
            android:textStyle="bold"

            />

    </LinearLayout>





</LinearLayout>