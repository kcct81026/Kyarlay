<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/relative_slider"
    android:layout_marginTop="@dimen/layout_margin_reading_post"
    android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.daimajia.slider.library.SliderLayout
            android:layout_alignParentTop="true"
            android:id="@+id/slider"
            android:layout_width="match_parent"
            custom:pager_animation="Accordion"
            custom:auto_cycle="true"

            custom:indicator_visibility="visible"
            custom:pager_animation_span="1100"
            android:layout_height="match_parent"/>

        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:paddingTop="@dimen/layout_margin_reading_post"
            android:background="@color/background"
            android:id="@+id/custom_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            custom:selected_color="@color/slider_selected"
            custom:unselected_color="@color/slider_default"
            custom:shape="oval"
            custom:selected_padding_left="3dp"
            custom:selected_padding_right="3dp"
            custom:unselected_padding_left="3dp"
            custom:unselected_padding_right="3dp"
            custom:selected_width="8dp"
            custom:selected_height="8dp"
            custom:unselected_width="4dp"
            custom:unselected_height="4dp"
            />
    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar1"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/colorPrimary"/>
</RelativeLayout>