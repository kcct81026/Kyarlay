    <LinearLayout
        android:paddingTop="@dimen/layout_padding"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:layout_weight="0.3"
            android:id="@+id/dialog_point_limit_text"
            android:textColor="@color/black"
            android:textSize="@dimen/title_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:layout_weight="0.7"
            android:textSize="@dimen/title_small"
            android:textColor="@color/black"
            android:id="@+id/dialog_point_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>



    <LinearLayout
        android:paddingTop="@dimen/layout_padding"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:textSize="@dimen/title"
            android:textColor="@color/black"
            android:id="@+id/dialog_point_text"
            android:layout_weight="0.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.kyarlay.ayesunaing.custom_widget.CustomEditText
            android:background="@drawable/edit_border"
            android:id="@+id/dialog_point_eidttext"
            android:layout_weight="0.6"
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
        android:layout_marginTop="@dimen/margin"
        android:layout_width="match_parent"
        android:textColor="@color/line_gray"
        android:layout_height="2dp" />

    <com.kyarlay.ayesunaing.custom_widget.CustomButton
        android:padding="@dimen/layout_padding"
        android:layout_gravity="center"
        android:textSize="@dimen/title_small"
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="Use Point"
        android:id="@+id/dialog_point_use_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>