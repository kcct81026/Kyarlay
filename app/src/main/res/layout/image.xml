<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:id="@+id/cardView"
    android:layout_marginTop="@dimen/layout_margin_reading_post"
    app:cardElevation="@dimen/cardElevation">


    <LinearLayout
        android:layout_marginTop="@dimen/layout_padding"
        android:layout_marginBottom="@dimen/layout_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearTop"
            android:paddingLeft="@dimen/layout_margin_reading_post"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.kyarlay.ayesunaing.custom_widget.CircularNetworkImageView
                android:id="@+id/pageImage"
                android:gravity="left"
                android:scaleType="fitXY"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:paddingLeft="@dimen/layout_margin_reading_post"
                    android:visibility="gone"
                    android:id="@+id/title"
                    android:textSize="@dimen/title_small"
                    android:text="@string/delete_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:visibility="gone"
                    android:text="dlfldlfldlfdl"
                    android:gravity="center|left"
                    android:drawablePadding="2dp"
                    android:paddingTop="2dp"
                    android:textColor="#808080"
                    android:paddingLeft="@dimen/layout_margin_reading_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtType"
                    android:layout_marginRight="5dp"/>

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:paddingTop="2dp"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/layout_margin_reading_post"
                    android:textSize="@dimen/small_text"
                    android:id="@+id/babyage"
                    android:text="ddd"
                    android:textColor="#808080"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:paddingLeft="@dimen/layout_margin_reading_post"
                    android:visibility="gone"
                    android:id="@+id/time"
                    android:textColor="@color/line_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"/>
            </LinearLayout>

        </LinearLayout>




        <FrameLayout
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginBottom="@dimen/size_8dp"
            android:visibility="gone"
            android:id="@+id/imageframe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="center_horizontal">

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/previewProgress"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                 android:indeterminateTint="@color/black"/>

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:visibility="gone"
            android:textSize="@dimen/title_text_size"
            android:id="@+id/titleText"
            />

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView

            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:visibility="gone"
            android:id="@+id/body"
            />

    </LinearLayout>



</androidx.cardview.widget.CardView>