<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="@dimen/layout_margin_reading_post"
    app:cardElevation="@dimen/cardElevation">

    <LinearLayout
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:id="@+id/txtCalculate"
            android:background="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="dkkdkfkdkfd"
            android:textColor="@color/text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_detail_footer" />


        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="#d8c4f8"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/layout_margin_reading_post"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_marginBottom="@dimen/size_8dp"
                android:id="@+id/linearSingleOne"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/singleOneTitle"
                    android:text="dfdfdfd"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/singleOneAns"
                    android:paddingTop="@dimen/layout_margin_reading_post"
                    android:text="dfdfdfd"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="@dimen/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:background="#d8c4f8"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/layout_margin_reading_post"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_marginBottom="@dimen/size_8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearSingleTwo"
               >


                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/singleTwoTitle"
                    android:text="dfdfdfd"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/singleTwoAns"
                    android:paddingTop="@dimen/layout_margin_reading_post"
                    android:text="dfdfdfd"
                    android:gravity="center"
                    android:textSize="@dimen/title"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>









    </LinearLayout>


</androidx.cardview.widget.CardView>


