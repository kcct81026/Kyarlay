<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/border_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/layout_margin_reading_post"
        android:layout_marginBottom="@dimen/layout_margin_reading_post"
        android:layout_marginLeft="@dimen/layout_margin_reading_post"
        android:layout_marginRight="@dimen/size_8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.kyarlay.ayesunaing.custom_widget.SelectableRoundedImageView
            app:sriv_left_bottom_corner_radius="4dp"
            app:sriv_right_bottom_corner_radius="4dp"
            app:sriv_left_top_corner_radius="4dp"
            app:sriv_right_top_corner_radius="4dp"
            android:id="@+id/img"
            android:background="@drawable/border_grey"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width" />

        <LinearLayout
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginRight="@dimen/size_8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/title"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/titleCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgClose"
            app:srcCompat="@drawable/ic_close_black_24dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>


    <TextView
        android:layout_marginTop="@dimen/size_8dp"
        android:layout_marginBottom="@dimen/size_8dp"
        android:layout_marginLeft="@dimen/layout_margin_reading_post"
        android:layout_marginRight="@dimen/layout_margin_reading_post"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp" />



    <LinearLayout
        android:id="@+id/linearHeader"
        android:gravity="center"
        android:layout_margin="@dimen/layout_margin_reading_post"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:text="Option"
            android:layout_marginLeft="@dimen/size_8dp"
            android:textColor="@color/text"
            android:id="@+id/txtOptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.kyarlay.ayesunaing.custom_widget.TagFlowLayout
            android:layout_gravity="center"
            android:id="@+id/category_detail_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            zhy:max_select="-1"
            />

        <TextView
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginBottom="@dimen/size_8dp"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_margin="@dimen/layout_margin_reading_post"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_weight="1"
            android:textColor="@color/text"
            android:text="Quantity"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgMinus"
                android:padding="@dimen/size_8dp"
                app:srcCompat="@drawable/ic_remove_blue_24dp"
                android:background="@drawable/border_grey_no_corner"
                android:layout_width="@dimen/diment_40"
                android:layout_height="@dimen/diment_40" />

            <TextView
                android:background="@drawable/border_grey_no_corner"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="125"
                android:textSize="@dimen/small_text"
                android:id="@+id/quantity"
                android:textColor="@color/text"
                android:layout_width="@dimen/diment_40"
                android:layout_height="@dimen/diment_40" />


            <ImageView
                android:id="@+id/imgPlus"
                android:padding="@dimen/size_8dp"
                app:srcCompat="@drawable/ic_add_blue_24dp"
                android:background="@drawable/border_grey_no_corner"
                android:layout_width="@dimen/diment_40"
                android:layout_height="@dimen/diment_40" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_marginTop="@dimen/size_8dp"
        android:layout_marginBottom="@dimen/size_8dp"
        android:layout_marginLeft="@dimen/layout_margin_reading_post"
        android:layout_marginRight="@dimen/layout_margin_reading_post"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.kyarlay.ayesunaing.custom_widget.CustomButton
        android:layout_margin="@dimen/size_8dp"
        android:id="@+id/order"
        android:background="@drawable/checked_bg_yellow"
        android:text="Order"
        android:gravity="center"
        android:padding="@dimen/layout_margin_reading_post"
        android:textColor="@color/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>