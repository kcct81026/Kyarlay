<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">
        <com.daimajia.slider.library.SliderLayout
            android:layout_alignParentTop="true"
            android:id="@+id/slider"
            android:layout_width="match_parent"
            custom:pager_animation="Accordion"
            custom:auto_cycle="true"
            custom:indicator_visibility="visible"
            custom:pager_animation_span="1100"
            android:layout_height="wrap_content"/>

        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            custom:selected_color="@color/slider_selected"
            custom:unselected_color="@color/slider_default"
            custom:shape="oval"
            custom:selected_padding_left="3dp"
            custom:selected_padding_right="3dp"
            custom:unselected_padding_left="3dp"
            custom:unselected_padding_right="3dp"
            custom:selected_width="8dp"
            custom:selected_height="8dp"
            custom:unselected_width="4dp"
            custom:unselected_height="4dp"
            />
    </LinearLayout>
    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
        android:paddingTop="10dp"
        android:id="@+id/title"
        android:textSize="@dimen/huge_title"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
        android:paddingTop="5dp"
        android:id="@+id/title1"
        android:textSize="@dimen/huge_title"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.kyarlay.ayesunaing.custom_widget.CustomButton
        android:gravity="center"
        android:layout_gravity="center|right"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/title"
        android:id="@+id/to_continue"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>