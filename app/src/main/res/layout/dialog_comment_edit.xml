<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgClose"
                android:layout_marginLeft="@dimen/layout_margin_reading_post"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_close_black_24dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:text="Edit Comment"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/title_small"
                android:padding="@dimen/layout_margin_reading_post"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_margin="@dimen/layout_margin_reading_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <TextView
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="1dp" />



        <LinearLayout
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginBottom="@dimen/layout_margin_reading"
            android:id="@+id/linearUser"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.kyarlay.ayesunaing.custom_widget.CircularNetworkImageView
                android:id="@+id/userNetworkImage"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/layout_margin_reading_post"
                android:gravity="left"
                android:scaleType="fitXY"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <com.kyarlay.ayesunaing.custom_widget.CustomEditText
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:background="@drawable/grey_solid_button"
                android:layout_gravity="center"
                android:textSize="@dimen/title_small"
                android:gravity="top"
                android:maxLines="5"
                android:padding="@dimen/layout_margin_reading_post"
                android:id="@+id/txtComment"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/size_8dp"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:padding="8dp"
                android:gravity="center"
                android:text="  Cancel  "
                android:id="@+id/txtCancel"
                android:textColor="@color/text"
                android:textSize="@dimen/small_text"
                android:background="@drawable/border_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:padding="8dp"
                android:layout_marginLeft="@dimen/size_8dp"
                android:gravity="center"
                android:text="  Update  "
                android:id="@+id/txtUpdate"
                android:textColor="@color/text"
                android:textSize="@dimen/small_text"
                android:background="@drawable/checked_bg_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:id="@+id/linearLayoutPhoto"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imgComment"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginLeft="8dp"
                android:padding="@dimen/size_8dp"
                android:layout_marginBottom="@dimen/size_8dp"


                />

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imgCommentLand"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="8dp"
                android:paddingRight="@dimen/size_8dp"
                android:layout_marginBottom="@dimen/size_8dp"


                />

        </LinearLayout>



    </LinearLayout>
</ScrollView>
