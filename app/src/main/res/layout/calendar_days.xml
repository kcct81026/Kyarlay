<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:layout_marginTop="@dimen/layout_margin"
    app:cardElevation="@dimen/cardElevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_padding"
        android:layout_marginBottom="@dimen/layout_padding"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/dateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/days"
                android:textStyle="bold"
                android:textSize="@dimen/splash_screen"
                android:textColor="@color/noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/date"
                android:textStyle="bold"
                android:textSize="@dimen/huge_title"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MON" />

        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/margin"
            android:id="@+id/descLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="left"
            android:orientation="vertical">

            <RatingBar
                android:outlineAmbientShadowColor="@color/colorSplashScreen"
                android:paddingBottom="@dimen/margin"
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:numStars="3"
                android:progressTint="@color/colorSplashScreen"
                style="@style/Widget.AppCompat.RatingBar.Small"/>

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/birth_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/work_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E/ApkAssets: Error while loading asset assets/snapshot_blob_64.bin:
                                java.io.FileNotFoundException: assets/snapshot_blob_64.bin" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>