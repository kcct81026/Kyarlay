<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_above="@+id/relativeCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginBottom="@dimen/layout_margin_reading_post"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/shopping_cart_success"
                android:layout_width="200dp"
                android:layout_height="200dp" />


            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:layout_margin="@dimen/layout_margin_reading_post"
                android:textColor="@color/text"
                android:textSize="@dimen/text"
                android:id="@+id/txtTitle"
                android:text="dkfkdfkdk"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:layout_margin="@dimen/layout_margin_reading_post"
                android:id="@+id/txtStatus"
                android:text="dkfkdfkdk"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layoutPaymnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/background"
                    android:layout_height="2dp" />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:layout_margin="@dimen/layout_margin_reading_post"
                    android:id="@+id/txtPaymentTitle"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:text="Aya Account Payment Information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:layout_margin="@dimen/layout_margin_reading_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/txtAccountNumberTittle"
                        android:textColor="@color/black"
                        android:text="Account No"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:layout_marginLeft="@dimen/layout_margin_reading_post"
                        android:id="@+id/txtAccountNumber"
                        android:textColor="@color/black"
                        android:text="0000 0dfd02f02dfd2fd22"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/txtCopy"
                        android:textColor="@color/black"
                        android:text="Copy"
                        android:padding="@dimen/size_8dp"
                        android:background="@drawable/border_yellow_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                   <LinearLayout
                    android:layout_marginLeft="@dimen/layout_margin_reading_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:id="@+id/txtAccountNameTittle"
                        android:textColor="@color/black"
                        android:text="Name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                       <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                           android:layout_marginLeft="@dimen/layout_margin_reading_post"
                           android:id="@+id/txtAccountName"
                           android:textColor="@color/black"
                           android:text="Name"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                   </LinearLayout>


                <TextView
                    android:layout_marginTop="@dimen/layout_margin_reading_post"
                    android:layout_width="match_parent"
                    android:background="@color/background"
                    android:layout_height="2dp" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>







    <RelativeLayout
        android:id="@+id/relativeCart"
        android:paddingLeft="@dimen/layout_margin_reading_post"
        android:paddingRight="@dimen/layout_margin_reading_post"
        android:background="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/due_tool_bar">

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:layout_marginBottom="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_8dp"
            android:background="@drawable/checked_bg_yellow"
            android:text="Order"
            android:gravity="center"
            android:padding="@dimen/layout_margin_reading_post"
            android:textColor="@color/text"
            android:id="@+id/txtContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>