<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cart"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >



        <LinearLayout
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginBottom="@dimen/size_8dp"
            android:id="@+id/linearUser"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <com.kyarlay.ayesunaing.custom_widget.CircularNetworkImageView
                    android:id="@+id/userNetworkImage"
                    android:layout_gravity="top"
                    android:layout_marginLeft="@dimen/layout_margin_reading_post"
                    android:gravity="left"
                    android:scaleType="fitXY"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />


                <LinearLayout
                    android:layout_marginLeft="@dimen/size_8dp"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:paddingTop="@dimen/size_8dp"
                    android:background="@drawable/rounded_cardview_bgcolor"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                    android:text="dfdfdfdfd"
                                    android:paddingLeft="@dimen/layout_margin_reading_post"
                                    android:id="@+id/title"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black" />

                                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                    android:visibility="gone"
                                    android:text="dlfldlfldlfdl"
                                    android:gravity="center|left"
                                    android:drawablePadding="2dp"
                                    android:paddingTop="2dp"
                                    android:textColor="#808080"
                                    android:paddingLeft="@dimen/layout_margin_reading_post"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtType"
                                    android:layout_marginRight="5dp"/>

                                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                    android:paddingTop="2dp"
                                    android:visibility="gone"
                                    android:paddingLeft="@dimen/layout_margin_reading_post"
                                    android:textSize="@dimen/small_text"
                                    android:id="@+id/babyage"
                                    android:text="ddd"
                                    android:textColor="#808080"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                    android:paddingTop="2dp"
                                    android:paddingLeft="@dimen/layout_margin_reading_post"
                                    android:textSize="@dimen/small_text"
                                    android:id="@+id/time"
                                    android:text="ddd"
                                    android:textColor="@color/line_gray"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                                    android:id="@+id/body"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="@dimen/size_8dp"
                                    android:padding="@dimen/layout_margin"
                                    android:text="dkfkdfkdkfkdkfdkkk"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/small_text" />


                        </LinearLayout>

                        <ImageView
                            android:padding="4dp"
                            android:id="@+id/imgMore"
                            android:layout_marginRight="4dp"
                            app:srcCompat="@drawable/more_feature"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                </LinearLayout>





        </LinearLayout>



        <LinearLayout
            android:gravity="left"
            android:id="@+id/linearLayoutPhoto"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/imgComment"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="@dimen/size_8dp"
                    />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/imgCommentLand"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="@dimen/size_8dp"


                    />

        </LinearLayout>



        <LinearLayout
            android:background="#f3f5fc"
            android:layout_marginLeft="65dp"
            android:layout_marginBottom="@dimen/size_8dp"
            android:id="@+id/linearComments"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                
                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/imgPreview"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_kyarlay_shape"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/layout_margin"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:id="@+id/txtSubtitle"
                            android:text="dkfdkfkdkfkdkfdkfkdkfdk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                            android:visibility="gone"
                            android:id="@+id/txtWatch"
                            android:textColor="@color/coloredInactive"
                            android:text="dkfdkfkdkfkdkfdkfkdkfdk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </LinearLayout>

        </LinearLayout>


</LinearLayout>
