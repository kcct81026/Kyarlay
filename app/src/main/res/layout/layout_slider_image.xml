<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/linear"
    android:layout_marginLeft="@dimen/size_8dp"
    android:layout_marginRight="@dimen/size_8dp"
    >

    <com.kyarlay.ayesunaing.custom_widget.SelectableRoundedImageView
        android:id="@+id/img"
        android:scaleType="fitXY"
        app:sriv_left_top_corner_radius="@dimen/layout_margin_reading_post"
        app:sriv_right_top_corner_radius="@dimen/layout_margin_reading_post"
        app:sriv_left_bottom_corner_radius="@dimen/layout_margin_reading_post"
        app:sriv_right_bottom_corner_radius="@dimen/layout_margin_reading_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>