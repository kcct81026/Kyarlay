<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:text="Edit"
            android:id="@+id/txtAddress"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/title_small"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_margin="@dimen/layout_margin_reading_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.kyarlay.ayesunaing.custom_widget.CustomEditText
            android:layout_margin="@dimen/layout_margin_reading_post"
            android:background="@drawable/border_grey"
            android:layout_gravity="center"
            android:textSize="@dimen/title_small"
            android:gravity="top"
            android:padding="@dimen/layout_margin_reading_post"
            android:id="@+id/edAddress"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_margin="@dimen/layout_margin_reading_post"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <CheckBox
               android:id="@+id/chkYgn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/txtYgn"
                android:layout_margin="@dimen/layout_margin_reading_post"
                android:text="Yangon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <CheckBox
                android:id="@+id/chkOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/txtOther"
                android:layout_margin="@dimen/layout_margin_reading_post"
                android:text="Yangon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearTownship"
            android:layout_margin="@dimen/layout_margin_reading_post"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/txtTownship"
                android:padding="@dimen/layout_margin_reading_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:paddingLeft="5dp"
                android:id="@+id/spTownship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_padding"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/layout_margin_reading_post"
            android:layout_margin="@dimen/layout_margin_reading_post"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:padding="8dp"
                android:layout_marginLeft="@dimen/size_8dp"
                android:gravity="center"
                android:id="@+id/txtAdd"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text"
                android:background="@drawable/checked_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </LinearLayout>
</ScrollView>
