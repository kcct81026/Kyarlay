<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:background="@drawable/app_bar_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:paddingLeft="@dimen/layout_margin_reading_post"
            android:background="@drawable/app_bar_color"
            android:layout_gravity="center"
            android:id="@+id/title_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center|left"
                app:srcCompat="@drawable/arrowleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:textColor="@color/tool_bar_text_color"
                android:id="@+id/title"
                android:textSize="@dimen/title_small"
                android:paddingLeft="@dimen/size_8dp"
                android:text="dfdfdfdfd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:paddingBottom="@dimen/layout_margin_reading_post"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/tool_bar"
            android:layout_marginBottom="@dimen/tool_bar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/imgGift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:padding="@dimen/layout_margin_reading_post"
                    android:id="@+id/txtGiftTitile"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="Kyarlay Voucher - 1000 Kyats"
                    android:textStyle="bold"
                    />
                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/txtGiftValid"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/size_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Kyarlay Voucher - 1000 Kyats"
                    android:textStyle="bold"
                    />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/txtGiftPoint"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/size_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Kyarlay Voucher - 100d0 Kyats"
                    android:textStyle="bold"
                    />

                <include
                    android:layout_gravity="center"
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/layout_progress_bar" />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:layout_margin="@dimen/layout_margin_reading_post"
                    android:id="@+id/txtGiftDetailTitle"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Kyarlay Voucher - 1000 Kyats"
                    android:textStyle="bold"
                    />



                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:layout_marginBottom="@dimen/size_8dp"
                    android:layout_marginLeft="@dimen/layout_margin_reading_post"
                    android:layout_marginRight="@dimen/layout_margin_reading_post"
                    android:id="@+id/txtGiftDetailBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Kyarlay Voucher - 1000 Kyats"
                    android:textStyle="bold"
                    />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:visibility="gone"
                    android:id="@+id/txtGiftAcces"
                    android:layout_marginBottom="@dimen/size_8dp"
                    android:layout_marginLeft="@dimen/layout_margin_reading_post"
                    android:layout_marginRight="@dimen/layout_margin_reading_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/coloredInactive"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Kyarlay Voucher - 1000 Kyats"
                    android:textStyle="bold"
                    />
                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:layout_margin="@dimen/layout_margin_reading_post"
                    android:id="@+id/txtGiftContactTitle"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Kyarlay Voucher - 1000 Kyats"
                    android:textStyle="bold"
                    />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:layout_marginBottom="@dimen/size_8dp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/layout_margin_reading_post"
                    android:layout_marginRight="@dimen/layout_margin_reading_post"
                    android:id="@+id/txtGiftContactBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Kyarlay Voucher - 1000 Kyats"
                    android:textStyle="bold"
                    />


            </LinearLayout>
        </ScrollView>
        <!--<com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:id="@+id/txtGiftPurchase"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center|right"
            android:background="@drawable/checked_bg"
            android:padding="@dimen/layout_margin_reading_post"
            android:layout_margin="@dimen/layout_margin_reading_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:gravity="center"
            android:text="Purchase"
            android:textColor="@color/white"
            android:textStyle="bold"
            />-->

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:id="@+id/txtGiftPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/icon_top_margin"
            android:layout_marginLeft="@dimen/icon_top_margin"
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/checked_bg"
            android:gravity="center"
            android:padding="@dimen/layout_margin_reading_post"
            android:text="Purchase"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </RelativeLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>