<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:zhy="http://schemas.android.com/tools" >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_marginBottom="@dimen/size_8dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kyarlaybanner"
                />

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_marginRight="@dimen/layout_margin_reading_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/search"/>

        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>


    <FrameLayout
        android:layout_marginTop="@dimen/tool_bar"
        android:layout_marginBottom="@dimen/tool_bar"
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_gravity="center|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:indeterminateTint="@color/black"/>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOne"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
            android:visibility="gone"
            android:id="@+id/header"
            android:gravity="center"
            android:layout_gravity="center|top"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/linearHeader"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <com.kyarlay.ayesunaing.custom_widget.TagFlowLayout
                    android:layout_gravity="center"
                    android:id="@+id/category_detail_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    zhy:max_select="-1"
                    />
                <TextView
                    android:layout_marginTop="@dimen/layout_margin_reading_post"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background" />
            </LinearLayout>
        </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>


    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>