<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:id="@+id/title"
        android:gravity="center"
        android:textSize="@dimen/huge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/language"
        android:textColor="@color/black"/>


    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:id="@+id/myanmar_layout"
        android:orientation="horizontal"
        android:layout_height="@dimen/category_detail_footer"
        android:layout_width="match_parent"
        android:weightSum="1">


        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:id="@+id/myanmar"
            android:gravity="left|center"
            android:textSize="@dimen/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.86"
            android:text="@string/setting_myanmar"
            android:textColor="@color/black"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:layout_weight="0.15"
            android:id="@+id/radiomyanmar" />


    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/english_layout"
        android:orientation="horizontal"
        android:layout_height="@dimen/category_detail_footer"
        android:layout_width="match_parent"
        android:weightSum="1">


        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:id="@+id/english"
            android:gravity="left|center"
            android:textSize="@dimen/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/setting_english"
            android:layout_weight="0.86"
            android:textColor="@color/black"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:layout_weight="0.15"
            android:id="@+id/radioenglish" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:id="@+id/next_layout"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.kyarlay.ayesunaing.custom_widget.CustomButton
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Next"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="center" />
        </LinearLayout>

</LinearLayout>