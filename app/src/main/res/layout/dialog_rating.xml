<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:padding="@dimen/layout_margin_reading_post"
            android:textColor="@color/black"
            android:text="feed back"
            android:id="@+id/txtRatingTitle"
            android:textSize="@dimen/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingLeft="@dimen/layout_margin_reading_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <!--<RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5"

                />-->
            <RatingBar
                android:id="@+id/ratingBar"
                android:isIndicator="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/background"
                android:numStars="5"
                android:progressTint="@color/colorSplashScreen"
                android:rating="0"
                android:secondaryProgressTint="@android:color/transparent"
                android:stepSize="0.5"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>


        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:visibility="gone"
            android:padding="@dimen/layout_margin_reading_post"
            android:textColor="@color/black"
            android:text="feed back"
            android:id="@+id/txtFeedBackTitle"
            android:textSize="@dimen/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.kyarlay.ayesunaing.custom_widget.CustomEditText
            android:hint="Enter "
            android:padding="@dimen/layout_margin_reading_post"
            android:gravity="top"
            android:id="@+id/editFeedBack"
            android:layout_gravity="top|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:layout_margin="@dimen/layout_margin_reading_post"
            android:padding="@dimen/layout_margin_reading_post"
            android:background="@drawable/checked_bg"
            android:layout_gravity="center"
            android:id="@+id/txtSubmitRating"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
