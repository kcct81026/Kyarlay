<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/layout_margin_reading_post"
    android:background="@color/white"
    android:padding="@dimen/layout_margin_reading_post">

    <RelativeLayout
        android:id="@+id/layout_no_vip"
        android:background="@drawable/bg_yellow_12dp_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/layoutOne"
            android:padding="@dimen/size_8dp"
            android:layout_margin="@dimen/layout_margin_reading_post"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginRight="@dimen/layout_margin_reading_post"
                android:layout_width="@dimen/diment_30"
                android:layout_height="@dimen/diment_30"
                android:src="@drawable/vip_icon"/>
            <TextView
                android:id="@+id/txtNoVipTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_gravity="center"
                android:text="Let\'s make your account to VIP"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/layoutOne"
            android:background="@drawable/yellow_border_line">

            <LinearLayout
                android:layout_margin="@dimen/size_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNoVipAmount"
                    android:textSize="@dimen/huge_title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="15000000 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_margin_reading_post"/>

                <TextView
                    android:id="@+id/txtNoVipMonthBetween"
                    android:textSize="@dimen/title"
                    android:textColor="@color/black"
                    android:text="15000000 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_margin_reading_post"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtNoVipRemiderText"
                android:layout_marginLeft="@dimen/layout_margin_reading_post"
                android:paddingLeft="@dimen/layout_margin_reading_post"
                android:paddingBottom="@dimen/layout_margin_reading_post"
                android:textSize="@dimen/small_text_14"
                android:textColor="@color/black"
                android:text="15000000 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_vip"
        android:padding="@dimen/layout_margin_reading_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/blue_corner_white_solid_12dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/info"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/layout_margin_reading_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtVipTitle"
                android:textSize="@dimen/huge_title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="15000000 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/txtVipRemiderText"
                android:layout_marginTop="@dimen/layout_padding"
                android:textSize="@dimen/small_text_14"
                android:textColor="@color/black"
                android:text="15000000 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutShopping"
        android:layout_marginTop="@dimen/layout_margin_reading_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_marginTop="@dimen/diment_30"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_yellow_12dp_corner">

            <TextView
                android:id="@+id/txtShoppingTitle"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/title"
                android:textColor="@color/black"
                android:text="Let\'t go shopping "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_margin_reading_post"/>

            <ImageView
                android:layout_width="@dimen/diment_30"
                android:layout_height="@dimen/diment_30"
                app:srcCompat="@drawable/right_arrow"
                android:layout_marginRight="@dimen/layout_margin_reading_post"
                />

        </LinearLayout>

        <ImageView
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="@dimen/diment_30"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/girl_go_shopping"
            android:layout_marginRight="@dimen/layout_margin_reading_post"
            />
    </RelativeLayout>


</LinearLayout>