<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/cardElevation"
    android:layout_marginTop="@dimen/layout_margin_reading_post"
    android:background="@color/white"
    >

    <LinearLayout

        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="1dp">

        <LinearLayout
            android:padding="@dimen/layout_margin_reading_post"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/userNetworkImage"
                android:gravity="left"
                android:scaleType="fitXY"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <LinearLayout
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:text="dfdfdfdfd"
                    android:paddingLeft="@dimen/layout_margin_reading_post"
                    android:id="@+id/title"
                    android:textSize="@dimen/small_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />



                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:paddingTop="2dp"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/layout_margin_reading_post"
                    android:textSize="@dimen/small_text"
                    android:id="@+id/babyage"
                    android:text="ddd"
                    android:textColor="#808080"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:text="dlfldlfldlfdl"
                    android:visibility="gone"
                    android:gravity="center|left"
                    android:drawablePadding="2dp"
                    android:paddingTop="2dp"
                    android:textColor="#808080"
                    android:paddingLeft="@dimen/layout_margin_reading_post"
                    android:textSize="@dimen/small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtType"
                    android:layout_marginRight="5dp"/>

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:paddingTop="2dp"
                    android:paddingLeft="@dimen/layout_margin_reading_post"
                    android:id="@+id/date"
                    android:text="ddd"
                    android:textSize="@dimen/small_text"
                    android:textColor="@color/line_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/save"
                android:layout_width="25dp"
                android:layout_height="14dp"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:gravity="right"
                app:srcCompat="@drawable/bookmark_save" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="right"
                app:srcCompat="@drawable/more_feature" />

        </LinearLayout>

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:layout_margin="@dimen/size_8dp"
            android:paddingLeft="@dimen/layout_margin_reading"
            android:background="@color/white"
            android:id="@+id/question"
            android:text="dkdkfkdfkdkfdkfkdkfdkfkdkfdkfkdk"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linearLikeComment"
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/layout_padding"
                android:layout_marginRight="@dimen/layout_padding"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center|left"
                    android:layout_weight="0.33"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:layout_marginLeft="3dp"
                        android:textSize="@dimen/small_text"
                        android:id="@+id/likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="0.33"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|right"
                    android:layout_weight="0.33"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:layout_marginLeft="3dp"
                        android:textSize="@dimen/small_text"
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="0.2dp" />

            <LinearLayout
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/layout_padding"
                android:layout_marginRight="@dimen/layout_padding"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/like_layout"
                    android:gravity="center|left"
                    android:layout_weight="0.33"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/wishlist"
                        app:srcCompat="@drawable/ic_favorite_red_24dp"
                        android:layout_height="20dp"
                        android:layout_width="20dp"/>
                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:layout_marginLeft="3dp"
                        android:text="Like"
                        android:textColor="@color/text_comment"
                        android:textSize="@dimen/small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/comment_layout"
                    android:gravity="center"
                    android:layout_weight="0.33"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/comment"
                        app:srcCompat="@drawable/comments"
                        android:layout_height="20dp"
                        android:layout_width="20dp"/>
                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:textColor="@color/text_comment"
                        android:text="Comment"
                        android:layout_marginLeft="3dp"
                        android:textSize="@dimen/small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/share_layout"
                    android:gravity="center|right"
                    android:layout_weight="0.33"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/share"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        app:srcCompat="@drawable/share_icon"/>
                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:text="Share"
                        android:textColor="@color/text_comment"
                        android:layout_marginLeft="3dp"
                        android:textSize="@dimen/small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>