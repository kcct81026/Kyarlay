<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/richtext_main_cardView"
    android:gravity="center"
    app:cardElevation="@dimen/cardElevation"
    android:layout_marginTop="@dimen/layout_margin_reading_post">

    <LinearLayout
        android:layout_marginBottom="@dimen/layout_margin_reading_post"
        android:layout_marginTop="@dimen/layout_margin_reading_post"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/newui_adapter_layout">

        <LinearLayout
            android:id="@+id/linearTop"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/page_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_gravity="left"
                    android:id="@+id/page_image_url"
                    android:scaleType="fitXY"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/title_small"
                        android:textColor="@color/black"
                        android:text="dkkdk"
                        android:layout_gravity="left|center"
                        android:id="@+id/page_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/small_text"
                        android:layout_gravity="left|center"
                        android:id="@+id/page_time"
                        android:text="kdkdk"
                        android:textColor="@color/text_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_margin="@dimen/size_8dp"
                    app:srcCompat="@drawable/product_delete"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/reading_detail"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="@dimen/margin"
                android:paddingBottom="@dimen/margin"
                android:paddingLeft="@dimen/layout_padding"
                android:paddingRight="@dimen/layout_padding"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:paddingTop="@dimen/margin"
                    android:text="Hi this is body"
                    android:textSize="@dimen/text"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bodyNumber"/>


                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:paddingTop="@dimen/margin"
                    android:text="Hi this is body"
                    android:textSize="@dimen/small_text"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/body"/>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/image"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>



        </LinearLayout>

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:id="@+id/txtLikes"
            android:padding="@dimen/layout_margin_reading_post"
            android:text="vote pay ml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:background="@color/background"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_marginTop="@dimen/layout_margin_reading_post"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearVote"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/ic_tag_faces_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/txtVote"
                    android:text="vote pay ml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:background="@color/background"
                android:layout_width="2dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/linearShare"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                    android:id="@+id/txtShare"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="share ml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



         <!--   android:padding="4dp"
            android:layout_margin="4dp"
            android:background="@drawable/border_grey_solid"-->

        </LinearLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>