<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:cardElevation="@dimen/cardElevation"
    android:layout_marginTop="@dimen/layout_margin_reading_post"
    >

    <LinearLayout
        android:layout_marginBottom="@dimen/layout_margin_reading_post"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                layout="@layout/main_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/txtTownship"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#C0C0BD"
                android:layout_alignParentTop="true"
                android:padding="12dip"
                android:textSize="@dimen/small_text"
                android:text="SomeText"
                android:textColor="@color/white" />

        </RelativeLayout>

        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:id="@+id/txtHidden"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_margin_reading_post" />


        <com.kyarlay.ayesunaing.custom_widget.CustomTextView
            android:id="@+id/txtShopTitle"
            android:padding="@dimen/layout_margin_reading_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/linearCall"
            android:layout_margin="@dimen/size_8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                app:srcCompat="@drawable/menu_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/txtPhone"
                android:paddingLeft="@dimen/layout_margin_reading_post"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearShowLocation"
            android:layout_margin="@dimen/size_8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_map_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.kyarlay.ayesunaing.custom_widget.CustomTextView
                android:id="@+id/txtShowAddress"
                android:paddingLeft="@dimen/layout_margin_reading_post"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>